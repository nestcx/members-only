<h2>Posts:</h2>
<%= link_to "Create new post", new_post_path %>
<% @posts.each do |post| %>
	<h3><%= post.title %></h3>
	<p><%= post.body %></p>
	<% if signed_in? %>
		<%= User.find_by(id: post.user_id).name %>
	<% else %>
		<%= link_to "Username hidden!", login_path %>
	<% end %>
	<br>
	-------
	<br>
<% end %>